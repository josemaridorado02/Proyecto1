server {
    listen 80;
    listen [::]:80;

    server_name {{ item.datos.nameserver }};
    root {{ item.datos.documentroot }};
    index index.php index.html index.htm;

    # Logs
    access_log /var/log/nginx/{{ item.datos.accesslog }}.log;
    error_log /var/log/nginx/{{ item.datos.errorlog }}.log;

    # Configuración principal
    location / {
        try_files $uri $uri/ /index.php?$query_string;
    }

    # Procesar archivos PHP con PHP-FPM
    location ~ \.php$ {
        include snippets/fastcgi-php.conf;
        fastcgi_pass unix:/var/run/php/php{{ php_version }}-fpm.sock;
        fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
        include fastcgi_params;
    }

    # Denegar acceso a archivos .htaccess
    location ~ /\.ht {
        deny all;
    }

    # Denegar acceso a archivos ocultos
    location ~ /\. {
        deny all;
        access_log off;
        log_not_found off;
    }

    # Cacheo de archivos estáticos
    location ~* \.(jpg|jpeg|png|gif|ico|css|js|svg|woff|woff2|ttf|eot)$ {
        expires 30d;
        add_header Cache-Control "public, immutable";
    }
}